project_name: se_manager_tamper
package: platform
quality: production
label: Platform - SE Manager Tamper
description: >
  This example project demonstrates the tamper feature of Secure Vault device.
category: Example|Platform
source:
  - path: main.c
  - path: app_init.c
  - path: app_process.c
  - path: app_se_manager_tamper.c
  - path: app_se_manager_tamper_disable.c
include:
  - path: .
    file_list:
    - path: app_init.h
    - path: app_process.h
    - path: app_se_manager_macro.h
    - path: app_se_manager_tamper.h
    - path: app_se_manager_tamper_disable.h
other_file:
  - path: "readme.html"
component:
  - id: sl_string
  - id: status_string
  - id: se_manager
  - id: sl_system
  - id: device_init
  - id: device_init_hfrco
  - id: printf
  - id: iostream
  - id: iostream_retarget_stdio
  - id: iostream_usart
    instance: [vcom]
  - id: emlib_prs
  - id: simple_button
    instance:
      - btn0
      - btn1
configuration:
  - name: SL_STATUS_STRING_ENABLE_BLUETOOTH
    value: 0
  - name: SL_STATUS_STRING_ENABLE_WIFI
    value: 0
  - name: SL_DEVICE_INIT_HFRCO_BAND
    value: cmuHFRCODPLLFreq_38M0Hz
  - name: SL_BOARD_ENABLE_VCOM
    value: 1
    condition:
      - iostream_usart
  - name: SL_IOSTREAM_USART_VCOM_CONVERT_BY_DEFAULT_LF_TO_CRLF
    value: "true"
define:
  - name: DEBUG_EFM
  - name: SE_MANAGER_PRINT
toolchain_settings:
  - option: optimize
    value: debug
tag:
  - hardware:component:button:2+
